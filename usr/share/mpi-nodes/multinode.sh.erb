if ! command -v mpirun ; then
    echo "No mpirun command found, ensure that a version of MPI is installed and available in PATH" >&2
    exit 1
fi

#===========================
#  Create output directory
#---------------------------
# Files saved within the OUTPUT_DIR will be available through the
# flight-job utility.
#
# OUTPUT_DIR: "${WORKING_DIR}/${SLURM_JOB_NAME}-outputs/$SLURM_JOB_ID"
echo "Your output files will be stored in: $OUTPUT_DIR"
mkdir -p "$OUTPUT_DIR"

#===============================
#  Application launch commands
#-------------------------------
# Customize this section to suit your needs.

echo "Executing job commands, current working directory is $(pwd)"

# REPLACE THE FOLLOWING WITH YOUR APPLICATION COMMANDS

echo "Hello, <%= questions.workload.answer %>!" > $OUTPUT_DIR/test.output
echo "This is an example job. It was allocated $SLURM_NTASKS slot(s) across $SLURM_JOB_NUM_NODES node(s). The master process ran on `hostname -s` (as `whoami`)." >> $OUTPUT_DIR/test.output
mpirun -np $SLURM_JOB_NUM_NODES -npernode 1 \
    /bin/bash -c \
    'echo "This process was executed on `hostname -s` with rank $OMPI_COMM_WORLD_RANK."' \
    >> $OUTPUT_DIR/test.output

echo "Output file has been generated, please check $OUTPUT_DIR/test.output"
