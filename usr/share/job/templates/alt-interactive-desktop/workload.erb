    echo "Executing job commands, current working directory is $(pwd)" 2>&1 | tee_session_output

    # REPLACE THE FOLLOWING WITH YOUR APPLICATION COMMANDS

    echo "This is an example interactive job running a bash shell." 2>&1 | tee_session_output
    bash
fi
