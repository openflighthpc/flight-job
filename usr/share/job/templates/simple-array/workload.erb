<%# Set the default workload from the generation questions if present -%>
friend="<%= questions.workload.answer %>"
if [[ $# -gt 0 ]] ; then
  <%# Override the default workload with the answer from the submission_questions questions if present -%>
  friend="${@}"
fi

echo "Hello, ${friend}!" > $RESULTS_DIR/test.output.$SLURM_ARRAY_TASK_ID
echo "This is an example array job. This process was task number $SLURM_ARRAY_TASK_ID and it ran on `hostname -s` (as `whoami`)." >> $RESULTS_DIR/test.output.$SLURM_ARRAY_TASK_ID
